{
	"name": "tau-prolog",
	"version": "0.3.2",
	"description": "An open source Prolog interpreter in JavaScript",
	"main": "./modules/core.js",
	"scripts": {
		"example:fruit": "node examples/nodejs/fruit",
		"example:promises": "node examples/nodejs/promises",
		"lint": "semistandard",
 		"lint-fix": "semistandard --fix",
		"test-node": "qunit --require ./test/setup test/",
    "test-node-repl": "nodejs --require ./test/setup.js",
		"test-node-cover": "nyc qunit --require ./test/setup test/",
		"test-node-watch": "qunit --watch --require ./test/setup test/",
		"test-browser": "karma start",
		"test-browser-watch": "karma start --auto-watch --no-single-mode",
		"test": "npm run test-node && npm run test-browser",
		"cover": "npm run test-node-cover && npm run test-browser && nyc report",
		"coveralls": "npm run cover && cat coverage/lcov.info | coveralls"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tau-prolog/tau-prolog.git"
	},
	"keywords": [
		"tau-prolog",
		"prolog-interpreter",
		"iso-prolog-standard",
		"javascript",
		"prolog"
	],
	"files": [
		"modules",
		"examples",
    "test"
	],
	"author": "Jos√© Antonio Riaza Valverde <riazavalverde@gmail.com> (http://jariaza.es)",
	"license": "BSD-3-Clause",
	"bugs": {
		"url": "https://github.com/tau-prolog/tau-prolog/issues"
	},
	"homepage": "http://tau-prolog.org/",
	"dependencies": {
		"karma-chrome-launcher": "^3.1.0",
		"karma-coverage": "^2.0.3",
		"karma-firefox-launcher": "^2.1.1",
		"karma-qunit": "^4.1.2",
		"readline-sync": "1.4.9"
	},
	"devDependencies": {
		"coveralls": "^3.1.1",
		"karma": "^6.3.4",
		"nyc": "^15.1.0",
		"qunit": "^2.17.2",
		"semistandard": "^16.0.1"
	}
}
